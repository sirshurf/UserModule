<?xml version="1.0" encoding="UTF-8"?>
<forms>
    <login>
        <action>/user/authentication/login</action>
        <method>post</method>
        <id>loginForm</id>
        <name>loginForm</name>
        <elements>
            <username>
                <type>text</type>
                <options>
                    <label>username:</label>
                    <size>40</size>
                    <validators>
                        <notempty>
                            <validator>NotEmpty</validator>
                            <options>
                                <messages>
                                    <isEmpty>Your username is required</isEmpty>
                                </messages>
                            </options>
                        </notempty>
                    </validators>
                    <filters>
                        <trim>
                            <filter>StringTrim</filter>
                        </trim>
                    </filters>
                    <class></class>
                    <required>true</required>
                </options>
            </username>
            <password>
                <type>password</type>
                <options>
                    <label>password:</label>
                    <size>40</size>
                    <validators>
                        <notempty>
                            <validator>NotEmpty</validator>
                            <options>
                                <messages>
                                    <isEmpty>Your password is required</isEmpty>
                                </messages>
                            </options>
                        </notempty>                        
                    </validators>
                    <filters>
                        <trim>
                            <filter>StringTrim</filter>
                        </trim>
                    </filters>
                    <class></class>
                    <required>true</required>
                </options>
            </password>
            <submit>
                <type>submit</type>
                <ignore>true</ignore>
                <options>
                    <label>Submit</label>
                    <class>viewall</class>
                    <order>4</order>
                </options>
            </submit>
        </elements>
    </login>
    <profile>
        <action></action>
        <method>post</method>
        <id>userProfileForm</id>
        <name>userProfileForm</name>
        <elements>
            <username>
                <type>text</type>
                <options>
                    <label>LBL_USERNAME</label>
                    <size>40</size>
                    <validators>
                        <notempty>
                            <validator>NotEmpty</validator>
                            <options>
                                <messages>
                                    <isEmpty>Your username is required</isEmpty>
                                </messages>
                            </options>
                        </notempty>
                    </validators>
                    <filters>
                        <trim>
                            <filter>StringTrim</filter>
                        </trim>
                    </filters>
                    <class></class>
                    <required>true</required>
                </options>
            </username>
            <email>
                <type>text</type>
                <options>
                    <label>LBL_EMAIL</label>
                    <size>40</size>
                    <validators>
                        <notempty>
                            <validator>NotEmpty</validator>
                            <options>
                                <messages>
                                    <isEmpty>Your email address is required</isEmpty>
                                </messages>
                            </options>
                        </notempty>                        
                    </validators>
                    <filters>
                        <trim>
                            <filter>StringTrim</filter>
                        </trim>
                    </filters>
                    <class></class>
                    <required>true</required>
                </options>
            </email>
            <firstname>
                <type>text</type>
                <options>
                    <label>LBL_FIRST_NAME</label>
                    <size>40</size>
                    <validators>
                        <notempty>
                            <validator>NotEmpty</validator>
                            <options>
                                <messages>
                                    <isEmpty>Your first name is required</isEmpty>
                                </messages>
                            </options>
                        </notempty>                        
                    </validators>
                    <filters>
                        <trim>
                            <filter>StringTrim</filter>
                        </trim>
                    </filters>
                    <class></class>
                    <required>true</required>
                </options>
            </firstname>
            <lastname>
                <type>text</type>
                <options>
                    <label>LBL_LAST_NAME</label>
                    <size>40</size>
                    <validators>
                        <notempty>
                            <validator>NotEmpty</validator>
                            <options>
                                <messages>
                                    <isEmpty>Your last name is required</isEmpty>
                                </messages>
                            </options>
                        </notempty>                        
                    </validators>
                    <filters>
                        <trim>
                            <filter>StringTrim</filter>
                        </trim>
                    </filters>
                    <class></class>
                    <required>true</required>
                </options>
            </lastname>
 	    <id_roles>
                <type>DbSelect</type>
                <options>
                        <dbSelect>Select id_roles, role from acl_roles where is_deleted = 0</dbSelect>
                        <valueColumn>role</valueColumn>
                        <identityColumn>id_roles</identityColumn>
                    <label>LBL_ROLE</label>
                    <validators>
                        <notempty>
                            <validator>NotEmpty</validator>
                            <options>
                                <messages>
                                    <isEmpty>Your Role is required</isEmpty>
                                </messages>
                            </options>
                        </notempty>
                    </validators>
                    <filters>
                        <trim>
                            <filter>StringTrim</filter>
                        </trim>
                    </filters>
                    <class></class>
                    <required>true</required>
                </options>
            </id_roles>
        </elements>
    </profile>  
</forms>
